enum AuthProvider {
  GOOGLE
  GITHUB
  LOCAL
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  authProvider   AuthProvider @default(LOCAL)
  authProviderId String?      @unique
  profileImgUrl  String?

  // relations
  otpTokens Otp[]

  // meta
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
